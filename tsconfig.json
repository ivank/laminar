{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": false,
    "lib": [
      "es2019"
    ],
    "outDir": "dist"
  },
  "include": [
    "packages/laminar/src",
    "packages/jwt/src",
    "packages/pgboss/src",
    "packages/pg/src",
    "packages/kafkajs/src",
    "packages/winston/src",
    "packages/handlebars/src",
    "packages/cli/src",
    "packages/json-schema/src", 
    "packages/avro/src",
  ]
}
