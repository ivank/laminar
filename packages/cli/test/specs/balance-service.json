    "/api/v3/accounts/{accountId}/adjust-balance": {
      "post": {
        "tags": ["account"],
        "summary": "Adjust balance for a given accountId",
        "description": "Returns with the adjusted balance",
        "operationId": "adjustBalanceFor-V3",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
